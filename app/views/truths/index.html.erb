<p id="notice"><%= notice %></p>

<h1>Truths</h1>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Sent</th>
      <th>Tweet</th>
      <th>Retweet count</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @truths.each do |truth| %>
      <tr>
        <td><%= truth.text %></td>
        <td><%= truth.sent %></td>
        <td><%= truth.tweet_id %></td>
        <td><%= truth.retweet_count %></td>
        <td><%= truth.state %></td>
        <td><%= link_to 'Show', truth %></td>
        <td><%= link_to 'Edit', edit_truth_path(truth) %></td>
        <td><%= link_to 'Destroy', truth, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Truth', new_truth_path %>
