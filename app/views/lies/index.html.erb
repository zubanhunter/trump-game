<p id="notice"><%= notice %></p>

<h1>Lies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Model version</th>
      <th>Model order</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lies.each do |lie| %>
      <tr>
        <td><%= lie.text %></td>
        <td><%= lie.model_version %></td>
        <td><%= lie.model_order %></td>
        <td><%= lie.state %></td>
        <td><%= link_to 'Show', lie %></td>
        <td><%= link_to 'Edit', edit_ly_path(lie) %></td>
        <td><%= link_to 'Destroy', lie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

